<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Make Me Car Dealer!</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
  @using System.Collections.Generic
  @using CarDeals.Models
<body>
  <h1>Your Cars, My Lady:</h1>
  <h5>Your Cool Trucks:</h5>
  <ul>
    @if (Trucks.All.Count > 0)
    {
      @foreach (Trucks truck in Trucks.All)
      {
        <li>@truck.Make, @truck.Model, @truck.Year, @truck.Color, @truck.Price.ToString("C2")</li>
      }
    }
  </ul>
  <h5>Your Cool SUVs:</h5>
  <ul>
    @if (SUVs.All.Count > 0)
    {
      @foreach (SUVs suv in SUVs.All)
      {
        <li>@suv.Make, @suv.Model, @suv.Year, @suv.Color, @suv.Price.ToString("C2")</li>
      }
    }
  </ul>
  <h5>Your Cool SUVs:</h5>
  <ul>
    @foreach (Sedans sedan in Sedans.All)
    {
      <li>@sedan.Make, @sedan.Model, @sedan.Year, @sedan.Color, @sedan.Price.ToString("C2")</li>
    }
  </ul>
  <a href="/">Add Another Car</a>
  <a href="/allcars">Show me the lot</a>
</body>

</html>